<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="external-layout" template="/WEB-INF/views/layout/external-layout.jsp">
		<put-attribute name="scripts-include" value="/WEB-INF/views/includes/scripts-include.jsp"/>
		<put-attribute name="top-navigation-section" value="/WEB-INF/views/sections/top-navigation-section.jsp"/>
		<put-attribute name="footer-section" value="/WEB-INF/views/sections/footer-section.jsp"/>
	</definition>

	<definition name="login" extends="external-layout">
		<put-attribute name="main-section" value="/WEB-INF/views/pages/login.jsp"/>
	</definition>

	<definition name="error-page" extends="external-layout">
		<put-attribute name="main-section" value="/WEB-INF/views/pages/error-page.jsp"/>
	</definition>

	<definition name="page-not-found" extends="external-layout">
		<put-attribute name="main-section" value="/WEB-INF/views/pages/page-not-found.jsp"/>
	</definition>

	<definition name="access-denied" extends="external-layout">
		<put-attribute name="main-section" value="/WEB-INF/views/pages/access-denied.jsp"/>
	</definition>

	<definition name="internal-layout" template="/WEB-INF/views/layout/internal-layout.jsp" preparer="screenViewPreparer">
		<put-attribute name="scripts-include" value="/WEB-INF/views/includes/scripts-include.jsp"/>
		<put-attribute name="top-navigation-section" value="/WEB-INF/views/sections/top-navigation-section.jsp"/>
		<put-attribute name="header-section">
			<definition template="/WEB-INF/views/sections/header-section.jsp" preparer="headerSectionViewPreparer"/>
		</put-attribute>
		<put-attribute name="left-section">
			<definition template="/WEB-INF/views/sections/left-section.jsp" preparer="leftSectionViewPreparer"/>
		</put-attribute>
		<put-attribute name="footer-section" value="/WEB-INF/views/sections/footer-section.jsp"/>
	</definition>

	<definition name="dashboard-view" extends="internal-layout">
		<put-attribute name="main-section">
			<definition template="/WEB-INF/views/pages/dashboard.jsp" preparer="dashboardViewPreparer"/>
		</put-attribute>
	</definition>

	<definition name="list-view" extends="internal-layout">
		<put-attribute name="main-section">
			<definition template="/WEB-INF/views/pages/list.jsp" preparer="listViewPreparer"/>
		</put-attribute>
	</definition>

	<definition name="edit-view" extends="internal-layout">
		<put-attribute name="main-section">
			<definition template="/WEB-INF/views/pages/edit.jsp" preparer="editViewPreparer"/>
		</put-attribute>
	</definition>

	<definition name="show-view" extends="internal-layout">
		<put-attribute name="main-section">
			<definition template="/WEB-INF/views/pages/show.jsp" preparer="showViewPreparer"/>
		</put-attribute>
	</definition>

</tiles-definitions>